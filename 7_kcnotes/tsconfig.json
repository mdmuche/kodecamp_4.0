{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Bundler",
    "noEmit": true,
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "exclude": ["node_modules", "src/*/*.test.ts"]
}
